@model List<Tbl_IPPrinterSite>

@{
    var siteNewUrl = USBAdminHelp.WebHttpUrlPrefix + "/printer/siteNew";
    var siteEditUrl = USBAdminHelp.WebHttpUrlPrefix + "/printer/siteEdit";
    var siteDeleteUrl = USBAdminHelp.WebHttpUrlPrefix + "/printer/siteDelete";

    var addPrinterUrl = USBAdminHelp.WebHttpUrlPrefix + "/printer/siteAddPrinter";

    var siteList = Model;
}

<div>
    <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
        <legend>Printer Site</legend>
    </fieldset>

    <div class="layui-input-inline">
        <button class="layui-btn" type="button" onclick="siteAddNew()">
            <i class="layui-icon">&#xe654;</i> New Site
        </button>
    </div>

    <hr />
    @if (siteList != null && siteList.Count > 0)
    {
        <table id="index" lay-filter="index">
            <thead>
                <tr>
                    <th lay-data="{field:'siteName' ,width:150, sort: true}">SiteName</th>
                    <th lay-data="{field:'subnetAddr' ,width:150, sort: true}">Subnet</th>
                    <th lay-data="{field:'id' ,width:400 }">Id</th>
                    <th lay-data="{field:'action' ,width:200, fixed:'right'}">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var site in siteList)
                {
                    <tr>
                        <td>@site.SiteName</td>
                        <td>@site.SubnetAddr</td>
                        <td>@site.Id</td>
                        <td>
                            <button onclick="siteEdit(this)" data-id="@site.Id" class="layui-btn layui-btn-primary layui-border-blue layui-btn-xs">Edit</button>
                            <button onclick="siteAddIPPrinter(this)" data-id="@site.Id" data-siteName="@site.SiteName" class="layui-btn layui-btn-primary layui-border-blue layui-btn-xs">Add</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div>
            @ViewBag.Error
        </div>
    }

</div>


@section Script{
    <script>
        layui.use(['form', 'table', 'miniTab', 'layer'], function () {
            var form = layui.form,
                table = layui.table,
                layer = layui.layer;

            //var miniTab = layui.miniTab;

            table.init('index');

            //miniTab.listen();
        });
    </script>

    <script>
        function isReloadPage(yesORno) {
            if (yesORno === undefined) {
                let reload = sessionStorage.getItem('isReloadPage');
                if (reload === 'yes') {
                    return true;
                } else {
                    return false;
                }
            } else {
                sessionStorage.setItem('isReloadPage', yesORno);
            }
        }

        function submitForm(form) {
            isReloadPage('no');
            let data = $(form).serializeArray();
            let url = $(form).attr('action');
            $.post(url, data, function (json) {
                layui.layer.alert(json.msg, { title: 'Message' });
                isReloadPage('yes');
            },'json'
            ).fail(function (jqXHR, textStatus, errorThrown) {
                let error = textStatus + ':' + errorThrown;
                layer.alert(error, { title: 'Error' });
            });
            return false;
        }       


        function siteAddNew() {
            isReloadPage('no');
            let siteAddNewTpl = document.getElementById('siteAddNewTpl').innerHTML;
            layer.open({
                type: 1,
                title: 'New Site',
                shade: 0.3,
                area: ['480px', '400px'],
                content: siteAddNewTpl,
                end: function () {
                    if (isReloadPage()) {
                        window.location.reload();
                    }
                }
            });
        }

        function siteEdit(btn) {
            isReloadPage('no');
            let id = $(btn).attr('data-id');
            layer.open({
                type: 2,
                title: 'Edit',
                shade: 0.3,
                area: ['480px', '400px'],
                content: '@siteEditUrl' + '?Id=' + id,
                end: function () {
                    if (isReloadPage()) {
                        window.location.reload();
                    }
                }
            });
        }

        function siteDelete(btn) {
            isReloadPage('no');
            layer.confirm('Delete ?', { icon: 3, title: 'Confirm' }, function (index) {
                let id = $(btn).attr('data-id');

                $.post('@siteDeleteUrl', { Id: id }, function (json) {
                    layer.alert(json.msg, { title: 'Message' });
                    if (isReloadPage()) {
                        window.location.reload();
                    }
                }, 'json');

                layer.close(index);
            });
        }

        function siteAddIPPrinter(btn) {
            let laytpl = layui.laytpl;
            let siteId = $(btn).attr('data-id');
            let siteName = $(btn).attr('data-siteName');
            let siteAddIPPrinterTpl = document.getElementById('siteAddIPPrinterTpl').innerHTML;
            siteAddIPPrinterTpl = laytpl(siteAddIPPrinterTpl).render({
                siteId: siteId,
                siteName:siteName
            });

            layer.open({
                type: 1,
                title: 'New IP Printer',
                shade: 0.3,
                area: ['600px', '400px'],
                content: siteAddIPPrinterTpl,
                end: function () {
                    if (isReloadPage()) {
                        window.location.reload();
                    }
                }
            });
        }
    </script>


    <!----  Template  ---->

    <script type="text/html" id="siteAddNewTpl">
        <div style="padding:15px;">
            <form onsubmit="return submitForm(this);" class="layui-form" action="~/Printer/SiteAddNew" method="post">
                <div class="layui-form-item">
                    <label class="layui-form-label">SiteName</label>
                    <div class="layui-input-block">
                        <input type="text" name="SiteName" required lay-verify="required" class="layui-input">
                    </div>
                </div>

                <div class="layui-form-item">
                    <label class="layui-form-label">Subnet</label>
                    <div class="layui-input-block">
                        <input type="text" name="SubnetAddr" required lay-verify="required" placeholder="Subnet Address" class="layui-input">
                    </div>
                </div>

                <div class="layui-form-item">
                    <div class="layui-input-block">
                        <button class="layui-btn" lay-submit type="submit">Save</button>
                    </div>
                </div>
            </form>
        </div>

    </script>

    <script type="text/html" id="siteAddIPPrinterTpl">
        <div style="padding:15px;">

            <div class="layui-form-item">
                <label class="layui-form-label">SiteName</label>
                <div class="layui-input-block">
                    <input type="text" value="{{d.siteName}}" readonly class="layui-input">
                </div>
            </div>

            <form onsubmit="return submitForm(this);" class="layui-form" action="~/Printer/SiteAddIPPrinter" method="post">
                <div class="layui-form-item">
                    <label class="layui-form-label">PrinterName</label>
                    <div class="layui-input-block">
                        <input type="text" name="PrinterName" required lay-verify="required" class="layui-input">
                    </div>
                </div>

                <div class="layui-form-item">
                    <label class="layui-form-label">IP</label>
                    <div class="layui-input-block">
                        <input type="text" name="PortIPAddr" required lay-verify="required" class="layui-input">
                    </div>
                </div>

                <div class="layui-form-item">
                    <label class="layui-form-label">DriverName</label>
                    <div class="layui-input-block">
                        <input type="text" name="DriverName" required lay-verify="required" placeholder="Printer Driver Name" class="layui-input">
                    </div>
                </div>

                <div class="layui-form-item">
                    <label class="layui-form-label">DriverINFPath</label>
                    <div class="layui-input-block">
                        <input type="text" name="DriverINFPath" required lay-verify="required" placeholder="Driver INF File UNC Path" class="layui-input">
                    </div>
                </div>

                <div class="layui-form-item">
                    <div class="layui-input-block">
                        <button class="layui-btn" lay-submit type="submit">Save</button>
                    </div>
                </div>

                <input type="hidden" name="SiteId" value="{{d.siteId}}" />
            </form>
        </div>
    </script>
}

